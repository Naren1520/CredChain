generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Student {
  id        String   @id @default(uuid())
  seid      String   @unique
  name      String
  dob       DateTime
  phone     String?
  email     String?
  createdAt DateTime @default(now())
  certificates Certificate[]
}

model Institution {
  id           String   @id @default(uuid())
  name         String
  govtRegNo    String   @unique
  status       String   @default("PENDING")
  wallet       String?
  users        InstitutionUser[]
  certificates Certificate[]
  createdAt    DateTime @default(now())
}

model InstitutionUser {
  id            String   @id @default(uuid())
  institution   Institution @relation(fields: [institutionId], references: [id])
  institutionId String
  role          String
  name          String
  email         String   @unique
  passwordHash  String
  createdAt     DateTime @default(now())
  refreshTokens  RefreshToken[]
}

model Certificate {
  id           String   @id @default(uuid())
  certificateId String  @unique
  student      Student  @relation(fields: [studentId], references: [id])
  studentId    String
  institution  Institution @relation(fields: [institutionId], references: [id])
  institutionId String
  type         String
  filePath     String
  metaJson     String
  pdfHash      String
  chainHash    String?
  txHash       String?
  chainNetwork String?
  issuedAt     DateTime?
  createdAt    DateTime @default(now())
  verificationTokens VerificationToken[]
}

model VerificationToken {
  token         String   @id
  certificate   Certificate @relation(fields: [certificateId], references: [certificateId])
  certificateId String
  expiresAt     DateTime
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  actorId   String?
  actorRole String?
  ip        String?
  metadata  String?
  createdAt DateTime @default(now())
}

model RefreshToken {
  token            String   @id
  institutionUser  InstitutionUser? @relation(fields: [institutionUserId], references: [id])
  institutionUserId String?
  expiresAt        DateTime
  createdAt        DateTime @default(now())
}
